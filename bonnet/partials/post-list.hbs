<ul class="post-list">
    {{#each posts}}<li>
        <article class="hentry">
            <header>
                {{ thumbnailImage featuredImage }}
                <h2 class="entry-title"><a href="{{ href }}">{{ title }}</a></h2>
                {{ postMeta posted }}
            </header>
            <div class="entry-summary">
                <p>{{ summary }}</p>
            </div>
        </article>
    </li>{{/each}}
</ul>
